<html>
  <head>
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Acme&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="css/styles.css" />
    <style>
      * {
        overflow: hidden;
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      <div id="atlarge">
        <div class="row">
          <div class="col-4 login_interact">
            <h1 id="title_top">SIYOR</h1>
            <center>
              <h2 id="login_head">Login Agent</h2>
              <form action="/login-agent" method="POST">
                <input
                  id="login_input"
                  type="email"
                  placeholder="Enter the email"
                  name="email"
                />
                <input
                  id="login_input"
                  type="password"
                  placeholder="Enter the password"
                  name="password"
                />

                <button class="login_button">Submit</button>
              </form>
            </center>
          </div>
          <div class="col-8 banner">
            <img src="image/BG for Screen 3.png" alt="" style="width: 100%" />
          </div>
        </div>
      </div>
      <div id="atsmall">
        <div class="row">
          <div class="col-12 banner">
            <img src="image/BG for Screen 3.png" alt="" style="width: 100%" />
          </div>
        </div>
        <div class="row">
          <div class="col-12 login_interact" style="height:500px;">
            <h1 id="title_top">SIYOR</h1>
            <center>
              <h2 id="login_head">Login Agent</h2>
              <form action="/login-agent" method="POST">
                <input
                  id="login_input"
                  type="email"
                  placeholder="Enter the email"
                  name="email"
                />
                <input
                  id="login_input"
                  type="password"
                  placeholder="Enter the password"
                  name="password"
                />

                <button class="login_button">Submit</button>
              </form>
            </center>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
